---
import CardEntrepreneur from "./CardEntrepreneur.astro";
import { config } from "../../../public/config";

const resp = await fetch ('https://virtualcase-backend.onrender.com/users-manager/entrepreneurs/')
const status = resp.status
const data = status === 200 ? await resp.json() : []
---

<div id="entrepreneurship" class="bg-purple-900 p-4 pb-20 flex flex-col items-center text-white">
  <h2 class="text-2xl font-bold my-10">Emprendimientos</h2>
  {
    status === 200 ? (
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    {data.map((item: any) => (
      <CardEntrepreneur items={item}/>
    ))}
  </div>
    ) : (
      <p class="text-red-300 my-10">No se pudo cargar la información de los emprendimientos.</p>
    )
  }
  <!-- <button class="shadow-lg cursor-pointer bg-purple-700 text-white py-2 px-4 rounded mt-10 mb-6 hover:bg-purple-600 transition duration-300">
    Ver más
  </button> -->
</div>